<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".AddTaskFragment"
        android:layout_margin="12dp">

      <!--  <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">-->

            <TextView
                android:id="@+id/addTaskHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_your_task"
                android:textAlignment="center"
                android:textColor="@color/blue"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_alignParentTop="true"
                android:layout_marginTop="16dp"/>

            <EditText
                android:id="@+id/addTaskTitle"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="@string/enter_task_name"
                android:padding="10dp"
                android:textSize="20sp"
                android:layout_below="@id/addTaskHeading"
                android:background="@drawable/blue_border"
                android:maxLines="1"
                android:layout_marginTop="16dp"/>

            <EditText
                android:id="@+id/addTaskDesc"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:hint="@string/enter_the_description"
                android:padding="10dp"
                android:textSize="18sp"
                android:background="@drawable/blue_border"
                android:layout_below="@id/addTaskTitle"
                android:layout_marginTop="12dp"/>

            <!-- Spinner for Priority -->
           <!-- <Spinner
                android:id="@+id/addSpinnerPriority"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_margin="10dp"/>
            <TextView
                android:id="@+id/adddate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/select_deadline"
                android:padding="10dp"
                android:textSize="18sp"
                android:layout_margin="10dp"/>
            <CalendarView
                android:id="@+id/addcalendarView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"/>-->
        <!--</LinearLayout>-->

    </RelativeLayout>
</layout>